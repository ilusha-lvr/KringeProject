@model LR_5.Models.User

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f8f9fa;
    }

    .login-container {
        max-width: 400px;
        margin-top: 5%;
        background-color: #ffffff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.1);
        margin: auto;
    }

    .form-group {
        margin-bottom: 20px;
    }

    label {
        font-weight: bold;
    }

    input {
        width: 100%;
        padding: 8px;
        margin-top: 5px;
        box-sizing: border-box;
    }

    button {
        background-color: #007bff;
        color: white;
        padding: 10px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

        button:hover {
            background-color: #0056b3;
        }
</style>

<form method="post" asp-action="Login" class="login-container">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label for="Username">Логин</label>
        <input name="Username" class="form-control" required placeholder="Введите логин" />
    </div>
    <div class="form-group">
        <label for="PasswordHash">Пароль</label>
        <input name="PasswordHash" type="password" class="form-control" required placeholder="Введите пароль" />
    </div>
    <div>
        <button type="submit">Войти</button>
    </div>
</form>