@model List<LR_5.Models.Stud>
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Список учеников</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>
<body>
<div class="container">
<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>Инструктор</th>
            <th>Категория</th>
            <th>Фамилия</th>
            <th>Имя</th>
            <th>Отчество</th>
            <th>Дата начала обучения</th>
            <th>Дата окончания обучения</th>
            <th>Экзамен</th>
            <th>Внести изменения</th>
            <th>Удаление записи</th>
        </tr>
    </thead>
    <tbody>
        <h4><a asp-action="Create" class="btn btn-primary">Добавить ученика</a></h4>
        @foreach (var студент in Model)
        {
            <tr>
                <td>@(студент.Inst != null ? $"{студент.Inst.SurnameI} {студент.Inst.NameI} {студент.Inst.Otchestvo}" : "")</td>
                <td>@(студент.Cat != null ? $"{студент.Cat.NameC}" : "")</td>
                <td>@студент.Surname</td>
                <td>@студент.NameS</td>
                <td>@студент.Otchestvo</td>
                <td>@студент.DateS</td>
                <td>@(студент.DateE.HasValue ? студент.DateE.Value.ToString() : "Не указана")</td>
                <td>@(студент.Exam ? "Да" : "Нет")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@студент.StudId" class="btn btn-info">Изменить</a>
                </td>
                <td>
                    <form asp-controller="AdStud" asp-action="Delete" method="post" asp-route-id="@студент.StudId">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Вы точно хотите удалить студента?')">Удалить</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>

<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

</body>
</html>