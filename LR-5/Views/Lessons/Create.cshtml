@model CreateLessonViewModel

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Создать запись</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>
<body>

    <div class="container">
        <h1 class="display-4">Создать запись</h1>

        <form asp-controller="Lessons" asp-action="SaveLesson" method="post">
            <div class="form-group">
                <label for="SelectedStudentId">Выберите ученика:</label>
                <select asp-for="SelectedStudentId" asp-items="Model.Student" class="form-control"></select>
                <span asp-validation-for="SelectedStudentId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="SelectedCarId">Выберите машину:</label>
                <select asp-for="SelectedCarId" asp-items="Model.Cars" class="form-control"></select>
                <span asp-validation-for="SelectedCarId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="DateL">Дата:</label>
                <input asp-for="DateL" type="date" class="form-control" />
                <span asp-validation-for="DateL" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="TimeL">Время:</label>
                <input asp-for="TimeL" type="time" class="form-control" />
                <span asp-validation-for="TimeL" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Сохранить</button>
        </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

</body>
</html>